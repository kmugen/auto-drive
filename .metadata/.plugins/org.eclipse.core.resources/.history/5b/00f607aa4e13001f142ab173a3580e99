void taskMotorCtrl(float32 w_ref, uint8 motor_on, uint8 dir)
{
    float32 w_ref_1;
    float32 w_ref_2;

    float32 w_1;
    float32 w_2;

    float32 w_lpf_1;
    float32 w_lpf_2;

    static float32 w_lpf_prev_1;
    static float32 w_lpf_prev_2;

    float32 w_err_1;
    float32 w_err_2;

    w_ref_1 = -1.0f * w_ref;
    w_ref_2 = w_ref;

    w_1 = getWHat(MOTOR1);
    w_2 = getWHat(MOTOR2);

    w_lpf_1 = lowPassFilter()
}

void taskBuzzerCtrl(uint8 buzzer_on, uint8 motor_on);
