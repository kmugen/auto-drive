/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "lpf.h"
#include "Platform_Types.h"
#include "commonMacros.h"

/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/
#define T_S             0.001f
#define W_CUT           80

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
float32 lowPassFilter(float32 w_ref, float32 prevLpf)
{
    return (prevLpf + (T_S * w_cut * w_ref)) / (1 + T_S * w_cut);
}
