/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "taskScheduler.h"
#include "stm.h"
#include "encoder.h"
#include "uart.h"
#include <stdio.h>
#include "motor.h"
#include "lpf.h"
#include "pid.h"
#include "commonMacros.h"

/*********************************************************************************************************************/
/*-------------------------------------------------Data Structures---------------------------------------------------*/
/*********************************************************************************************************************/
 typedef struct
{
        uint32 cnt_1ms;
        uint32 cnt_10ms;
        uint32 cnt_100ms;
}TestCnt;

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
TestCnt stTestCnt;

float32 w_ref;
float32 w_ref_lpf;
float32 w_ref_lpf_prev;

float32 w;
float32 w_lpf;
float32 w_lpf_prev;

float32 encPos;
float32 prev_encPos;
float32 w_err;

float32 v_in;
char str[20];
/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
static void Task1ms(void);
static void Task10ms(void);
static void Task100ms(void);

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void appNoTask(void)
{
    countEncTicks();
}

static void Task1ms(void)
{
    if (stTestCnt.cnt_1ms < 5000 || stTestCnt.cnt_1ms >= 20000)
    {
        w_ref = 0.0;
    }
    else if (stTestCnt.cnt_1ms < 10000)
    {
        w_ref = 10 * PI / 5 * (stTestCnt.cnt_1ms - 5000) / 1000;
    }
    else if (stTestCnt.cnt_1ms < 15000)
    {
        w_ref =10 * PI;
    }
    else if (stTestCnt.cnt_1ms < 20000)
    {
        w_ref = 10 * PI / 5 * (20000 - stTestCnt.cnt_1ms) / 1000;
    }

    encPos = getEncPos(ENC2);
    w = (encPos - prev_encPos) * 1000;
    prev_encPos = encPos;

    if (stTestCnt.cnt_1ms < 4900)
    {
        v_in = 0;
    }
    else
    {
        w_ref_lpf = lowPassFilter(w_ref, w_ref_lpf_prev);
        w_ref_lpf_prev = w_ref_lpf;



        w_lpf = lowPassFilter(w, w_lpf_prev);
        w_lpf_prev = w_lpf;

        w_err = w_ref_lpf - w_lpf;

        v_in = pidController(MOTOR2, w_err, w_ref_lpf);

        v_in = (v_in > 12) ? 12 : v_in;
    }
    setMotorPower(0, w_ref_lpf/ 615);

    stTestCnt.cnt_1ms++;
}

static void Task10ms(void)
{
    sprintf(str, "%.2f %.1f %.1f\r\n", (float32)stTestCnt.cnt_10ms/100, w_ref_lpf, w_lpf);
    for (int i =0;i < 20; i++)
    {
        _out_uart3(str[i]);
    }
    stTestCnt.cnt_10ms++;
}

static void Task100ms(void)
{


    stTestCnt.cnt_100ms++;
}

void taskScheduler(void)
{
    if(schedulingInfo.f_1ms == 1)
    {
        schedulingInfo.f_1ms = 0;
        Task1ms();

        if(schedulingInfo.f_10ms == 1)
        {
            schedulingInfo.f_10ms = 0;
            Task10ms();
        }

        if(schedulingInfo.f_100ms == 1)
        {
            schedulingInfo.f_100ms = 0;
            Task100ms();
        }
    }
}
