/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "ultrasonic.h"
#include "pinSettings.h"
#include "gpio.h"
#include "extIrq.h"
#include "delay.h"

/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
uint32 g_echo_cnt = 0;

/*********************************************************************************************************************/
/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
IFX_INTERRUPT(ISR_US_R, 0, 250);
void ISR_US_R(void)
{
    g_echo_cnt++;
}

IFX_INTERRUPT(ISR_US_F, 0, 251);
void ISR_US_F(void)
{
    g_echo_cnt++;
}

void initUltrasonic(void)
{
    setPinOutput(PIN_US_TRIG);
    initExtIrq(PIN_US_ECHO_R, risingEdgeDetection, 250);
    initExtIrq(PIN_US_ECHO_F, fallingEdgeDetection, 251);
}

void trigUltrasonic(void)
{
    setPinLow(PIN_US_TRIG);
    delayUs(2);
    setPinHigh(PIN_US_TRIG);
    delayUs(10);
    setPinLow(PIN_US_TRIG);
}
