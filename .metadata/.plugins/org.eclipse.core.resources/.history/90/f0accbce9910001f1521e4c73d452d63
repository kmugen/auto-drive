/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/
#define J   2.09E-5
#define B   0.00002
#define Kt  0.042
#define Kb  0.042
#define R   8.4
#define L   1.16

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
float32 g_theta_h[2];
float32 g_w_h[2];
float32 g_i_h[2];

float32 g_int_theta_h[2];
float32 g_int_w_h[2];
float32 g_int_i_h[2];

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void observeMotor(uint8 chn, float32 v_in, float32 theta)
{
    float32 tmp = g_i_h[chn] * R / L
}

float32 getThetaHat(size_t chn)
{
    return g_theta_h[chn];
}

float32 getWHat(size_t chn)
{
    return g_w_h[chn];
}

float32 getIHat(size_t chn)
{
    return g_i_h[chn];
}
