/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "extIrq.h"
#include "pinSettings.h"
#include "isrPrio.h"
#include "switch.h"
#include "gpio.h"

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
uint8 getSW(void)
{
    uint8 ret = FALSE;
    static uint8 prev_sw = TRUE;

    uint8 cur_sw = getPinState(PIN_SW);
    if ((prev_sw == TRUE) && (cur_sw == FALSE))
    {
        ret = TRUE;
    }

    prev_sw = cur_sw;

    return ret;
}


