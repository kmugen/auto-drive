#ifndef INCLUDES_HARDWARE_DIAL_DIAL_H_
#define INCLUDES_HARDWARE_DIAL_DIAL_H_

/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "pinSettings.h"
#include "adc.h"

/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/
#define MAX_ADC_VAL     4095.0f

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
static inline void initDial(void)
{
    initAdc(&PIN_DIAL);
}

static inline float32 getWRef(void)
{
    return getAdc(&PIN_DIAL) / MAX_ADC_VAL * 900;
}

#endif /* INCLUDES_HARDWARE_DIAL_DIAL_H_ */
