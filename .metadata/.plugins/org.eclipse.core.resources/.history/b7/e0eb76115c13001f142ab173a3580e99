#ifndef INCLUDES_HARDWARE_ULTRASONIC_ULTRASONIC_H_
#define INCLUDES_HARDWARE_ULTRASONIC_ULTRASONIC_H_

/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "Ifx_Types.h"
#include "IfxStm.h"
#include "pinSettings.h"
#include "gpio.h"

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
extern uint64 g_cnt_f;
extern float32 g_dist_prev;

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
extern void initUltrasonic(void);

/*********************************************************************************************************************/
/*------------------------------------------Inline Function Implementation-------------------------------------------*/
/*********************************************************************************************************************/
extern void trigUltrasonic(void)
{
    setPinLow(PIN_US_TRIG);
    delayUs(2);
    setPinHigh(PIN_US_TRIG);
    delayUs(10);
    setPinLow(PIN_US_TRIG);
}

static inline float32 getUsDist(void)
{
    float32 dist = ((float32)g_cnt_f / IfxStm_getFrequency(&MODULE_STM0) * 1000000.0f / 58.8235f);
    g_dist_prev = dist;

    return dist;
}

#endif /* INCLUDES_HARDWARE_ULTRASONIC_ULTRASONIC_H_ */
