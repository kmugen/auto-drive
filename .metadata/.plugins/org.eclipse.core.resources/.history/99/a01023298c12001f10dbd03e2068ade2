/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void initDial(void)
{
    initAdc(&PIN_DIAL);
}

float32 getWRef(void)
{
    return getAdc(&PIN_DIAL) / 4095 * 900;
}
