#ifndef SRC_APP_LPF_LPF_H_
#define SRC_APP_LPF_LPF_H_

/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "Platform_Types.h"

#define T_S             0.001f
#define W_CUT           80
/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
static inline float32 lowPassFilter(float32 w_ref, float32 prevLpf)
{
    return (prevLpf + (T_S * W_CUT * w_ref)) / (1 + T_S * W_CUT);
}

#endif /* SRC_APP_LPF_LPF_H_ */
