/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "extIrq.h"
#include "pinSettings.h"
#include "isrPrio.h"
#include "switch.h"
#include "gpio.h"

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
uint8 g_sw = FALSE;

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void getSW(void)
{
    uint8
    static uint8 prev_sw = TRUE;
    uint8 cur_sw = getPinState(PIN_SW);
    if ((prev_sw == TRUE) && (cur_sw == FALSE))
    {
        g_sw = TRUE;
    }
}


