/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
extern uint64 g_cnt_f;
extern uint64 g_dist_prev;
/*********************************************************************************************************************/
/*-------------------------------------------------Data Structures---------------------------------------------------*/
/*********************************************************************************************************************/
 
/*********************************************************************************************************************/
/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
extern void initUltrasonic(void);
extern void trigUltrasonic(void);
static inline float32 getUsDist(void)
{
    if (g_cnt_f_prev)
    return (g_cnt_f / IfxStm_getFrequency(&MODULE_STM0) * 1000000 / 58.8235);
}

