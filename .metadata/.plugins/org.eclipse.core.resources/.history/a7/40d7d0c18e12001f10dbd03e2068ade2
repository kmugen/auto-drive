/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "extIrq.h"
#include "pinSettings.h"
#include "isrPrio.h"
#include "switch.h"

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/
uint8 g_sw = FALSE;

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
IFX_INTERRUPT(ISR_SW, 0, ISR_PRIO_SW);
void ISR_SW(void)
{
    g_sw = TRUE;
}

void initSwitch(void)
{
    initExtIrq(PIN_SW, fallingEdgeDetection, ISR_PRIO_SW);
}
