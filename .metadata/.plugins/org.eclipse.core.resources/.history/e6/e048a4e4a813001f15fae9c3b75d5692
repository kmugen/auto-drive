/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "dial.h"
#include "pinSettings.h"
#include "commonMacros.h"
/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/
#define MAX_ADC_VAL     4095.0f

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*---------------------------------------------Function Implementations----------------------------------------------*/
/*********************************************************************************************************************/
void initDial(void)
{
    initAdc(&PIN_DIAL);  // 다이얼 핀을 background adc scan으로 설정
}

float32 getWRef(void)
{
    return (float32)getAdc(&PIN_DIAL) / MAX_ADC_VAL * W_MAX;  /* 0 ~ W_MAX 사이의 값으로 ADC 결과 매핑 */
}
